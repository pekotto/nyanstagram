
<div class="sidemenu col-xs-10 col-xs-offset-1">
	<h3>投稿一覧</h3>
	<ul>
		<li><%= link_to "ユーザー", users_path %></li>
		<li><%= link_to "お気に入り", posts_like_posts_path %></li>
		<li><%= link_to "フォロー", posts_following_posts_path %></li>
		<li><%= link_to "フォロワー", posts_follower_posts_path %></li>
		<li><%= link_to "おすすめ", posts_breeds_path %></li>
	</ul>

	<br>
	<%= form_with url: search_path, method: :get, local: true do |f| %>
  		<%= f.text_field :q, placeholder: "タグワードを入力" %>
  		<%= f.submit "検索" %>
	<% end %>
	<br>
	<br>

    <div class="popular">
      <p class="popular-headline" style="display: inline-block; border-bottom: double;">人気ユーザー</p>
    	<div class="popular-box">
      		<% @follow_count_id.each do |user| %>
            	<table class="popular-users">
              		<tr class="popular-name">
              			<td rowspan="2"><%= attachment_image_tag @follow_count_user[user], :plofile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
              			</td>
              			<td><p><span class="popular-username"><%= link_to @follow_count_user[user].user_name, user_path(user) %></span></td>
        			    </tr>
        			    <tr>
                    <td><p><%= @follow_count_user[user].followers.count %>フォロワー</p></td>
        			    </tr>
        		  </table>
      		<% end %>
    	</div>
    </div>
</div>