<div class="directmessage-wrapper col-xs-6 col-xs-offset-3">

 <% @entries.each do |e| %>
    <div class="user-name">
      <% if e.user != current_user %>
    <strong>
        <a class="rooms-user-link" href="/users/<%= e.user.id %>">
          <%= attachment_image_tag e.user, :plofile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %><%= e.user.user_name %>
        </a>
    </strong>
    <% end %>
    </div>
  <% end %>
  <hr>

  <div class="chats">
    <div class="chat">
      <% if @messages.present? %>
        <% @messages.each do |m| %>
          <div class="chat-box">
            <div class="chat-face">
              <p><%= m.user.user_name %></p>
            </div>
            <div class="chat-hukidashi"> <strong><%= m.message %></strong> <br>
              <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="posts">
      <%= form_for @message do |f| %>
        <%= f.text_area :message, placeholder: "メッセージを入力して下さい" , size: "80x3", class: "form-text-field" %>
          <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "送信",class: 'form-submit'%>
      <% end %>
    </div>
  </div>
</div>