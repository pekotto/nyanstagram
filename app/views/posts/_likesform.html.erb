<% if post.liked_by?(current_user) %>
    <%= link_to post_likes_path(post), method: :delete, remote: true, class: "post-list-items" do %>
        <i class="fas fa-paw" aria-hidden="true" style="color: black;"></i>
        <%= post.likes.count %> いいね
    <% end %>
<% else %>
    <%= link_to post_likes_path(post), method: :post, remote: true, class: "post-list-items" do %>
        <i class="fas fa-paw" aria-hidden="true"></i>
        <%= post.likes.count %> いいね
    <% end %>
<% end %>