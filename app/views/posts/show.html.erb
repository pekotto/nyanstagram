<div class="row">

	<div class="col-xs-4 col-xs-offset-1">
		<h2><%= @post.title %></h2>

		<% if @post.post_images.present? %>
  			<% @post.post_images.each do |image| %>
    		<%= attachment_image_tag image, :image, :fill, 250, 250 %>
  			<% end %>
  		<% else %>
    		<%= image_tag 'no_image.jpg', size: '250x250' %>
		<% end %>

		<p><%= link_to "編集",edit_post_path(@post.id) %></p>
		<p><%= link_to "削除",post_path(@post.id), method: :delete, data: { confirm: "削除してよろしいですか？" } %></p>
  	</div>

	<div class="col-xs-6">

		<% if @post.liked_by?(current_user) %>
    		<%= link_to post_like_path(@post), method: :delete do %>
    			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    			<%= @post.likes.count %> いいにゃ
    		<% end %>
		<% else %>
    		<%= link_to post_likes_path(@post), method: :post do %>
    			<i class="fa fa-heart-o" aria-hidden="true"></i>
    			<%= @post.likes.count %> いいにゃ
    		<% end %>
		<% end %>

		<p>text：<%= @post.content %></p><br>
		<p><%= @post.comments.count %>件コメント</p>

		<%= form_for [@post, @comment] do |f| %>
        	<p><%= f.text_area :comment, rows:'3', class: "form-control",placeholder: "コメントをここに" %></p>
    		<%= f.submit "送信", class: "btn btn-base-1 mt-20 pull-right" %>
		<% end %>
	</div>


	<div class="col-xs-6">
<ol>
    <% @post.comments.each do |comment| %>
        <li class="comment">
            <div class="comment-body bb">
                <div class="comment-avatar">
                    <div class="avatar">
                        <%= image_tag('no_image.jpg', style: "width: 60px; height: 60px;") %>
                        <%= comment.comment %>
                        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
                    </div>
                </div>
                <div class="comment-text">
                    <div class="comment-author clearfix">
                        <a href="#" class="link-author"><%= comment.user.user_name %></a>
                        <span class="comment-meta">
                        <span class="comment-date"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
                        </span>
                    </div>
                </div>
            </div>
        </li>
    <% end %>
</ol>
</div>

</div>

