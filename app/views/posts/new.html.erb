<div class="container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<h3><span>　新規投稿　</h3></span>
		</div>
	</div>

	<div class="newpost-wrapper">
		<%= form_with model: @post, local: true do |post| %>

    			<% if @post.errors.any? %>
        			<div id="error_explanation">
            			<h2><%= pluralize(@post.errors.count, "error") %> prohibited this upload from being saved:</h2>
        			</div>
    			<% end %>

			<div class="col-md-4 col-md-offset-1">

				<div class="post_image_field">
  					<%= image_tag @post.image, class: "new-post-image" if @post.image %>
  					<%= post.hidden_field :image_cache %>
  					<img id="img_prev" width=400 height=300 src="#" class="img_thumbnail  hidden"/>
  					<%= post.file_field :image, :id => 'post_post_img' %>
				</div>

				<p><%= post.check_box :remove_image %>画像を削除する</p>
			</div>

			<div class="col-md-7 new-post-left">
				<div class="col-md-12">
					<div class="col-md-1">
						<p>Title:</p>
					</div>
					<div class="col-md-9">
						<p><%= post.text_field :title %></p>
					</div>
				</div>

				<div class="col-md-12">
					<div class="col-md-1">
						<p>Text:</p>
					</div>
					<div class="col-md-9">
						<p><%= post.text_area :content, placeholder: "200字以内", class: "post-content" %></p>
					</div>
				</div>

				<div class="col-md-12">
					<div class="col-md-1">
						<p>Tag:</p>
					</div>
					<div class="col-md-11">
						<p id="post-tags"><%= post.text_field :tag_names, class: "post-tag-input", placeholder: "20字以内" %><span class="tag-message"> ( , )で区切る</span></p>
					</div>
				</div>

				<div class="col-md-12">
					<div class="post-submit col-md-offset-1 col-md-3">
						<%= post.submit '投稿', class: "btn btn-primary btn-block" %>
					<% end %>
					</div>
				</div>
			</div>
	</div>
</div>
