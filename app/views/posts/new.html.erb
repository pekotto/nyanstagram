<div class="container">
	<div class="row">
		<div class="col-xs-offset-2 col-xs-8">
			<h3><span>　新規投稿　</h3></span>
		</div>
	</div>

	<div class="row">
		<%= form_with model: @post, local: true do |post| %>

			<div class="col-xs-4 col-xs-offset-1">
				<p>投稿画像</p>
				<p><%= post.attachment_field :image %></p>
			</div>

			<div class="col-xs-7">
				<div class="col-xs-12">
					<div class="col-xs-1">
						<p>Title:</p>
					</div>
					<div class="col-xs-9">
						<p><%= post.text_field :title %></p>
					</div>
				</div>

				<div class="col-xs-12">
					<div class="col-xs-1">
						<p>Text:</p>
					</div>
					<div class="col-xs-9">
						<p><%= post.text_area :content, size: "50x10" %></p>
					</div>
				</div>

				<div class="col-xs-12">
					<div class="col-xs-1">
						<p>Tag:</p>
					</div>
					<div class="col-xs-9">
						<p><%= post.text_area :tag_names, size: "40x1" %></p>
					</div>
				</div>

				<div class="col-xs-12">
					<div class="col-xs-offset-3 col-xs-3">
						<%= post.submit '投稿', class: "btn btn-primary btn-block" %>
					<% end %>
					</div>
				</div>
			</div>
	</div>
</div>
