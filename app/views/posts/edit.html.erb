
	<div class="row">
		<div class="col-xs-offset-1 col-xs-8">
			<h3><span>　投稿編集　</h3></span>
		</div>
	</div>

	<div class="newpost-wrapper">
		<%= form_with model: @post, local: true do |post| %>

    			<% if @post.errors.any? %>
        			<div id="error_explanation">
            			<h2><%= pluralize(@post.errors.count, "error") %> prohibited this upload from being saved:</h2>
        			</div>
    			<% end %>

			<div class="col-xs-4 col-xs-offset-1">

				<div class="post_image_field">
  					<%= attachment_image_tag @post, :image, class: "image_prev", id: "img_prev" if @post.image %>
  					<%= post.hidden_field :image_cache %>
  					<%= post.file_field :image, :id => 'post_post_img' %>
				</div>
				<p><%= post.check_box :remove_image %>画像を削除する</p>

			</div>

			<div class="col-xs-7">
				<div class="col-xs-12">
					<div class="col-xs-1">
						<p>Title:</p>
					</div>
					<div class="col-xs-9">
						<p><%= post.text_field :title %></p>
					</div>
				</div>

				<div class="col-xs-12">
					<div class="col-xs-1">
						<p>Text:</p>
					</div>
					<div class="col-xs-9">
						<p><%= post.text_area :content, size: "50x10", placeholder: "200字以内" %></p>
					</div>
				</div>

				<div class="col-xs-12">
					<div class="col-xs-1">
						<p>Tag:</p>
					</div>
					<div class="col-xs-9">
						<p id="post-tags"><%= post.text_area :tag_names, size: "20x1" %><span class="tag-message">複数は( , )で区切る</span></p>
						<%= hidden_field_tag :tag_hidden,@tag_list %>
					</div>
				</div>

				<div class="col-xs-12">
					<div class="col-xs-offset-1 col-xs-3">
						<%= post.submit '更新', class: "btn btn-primary btn-block" %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
