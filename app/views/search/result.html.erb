<div class="row">
	<div class="spserch-form">
        <%= form_with url: search_result_path, method: :get, local: true do |f| %>
        <%= f.text_field :q, placeholder: "タグワードを入力" %>
        <%= f.submit "検索" %>
    <% end %>
	</div>

	<div class="spsearch-post">
		<h3>投稿一覧</h3>
            <div class="post-list">

                <% @tags.posts.each do |post| %>
                    <%= link_to post_path(post),class: "post-list-items" do %>
                        <%= render 'posts/post_index', post: post %>
                    <% end %>
                <% end %>

            </div>

	</div>
</div>